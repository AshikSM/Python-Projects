import speech_recognition as sr

recognizer = sr.Recognizer()
with sr.Microphone() as source:
    print("üé§ Say something...")
    recognizer.adjust_for_ambient_noise(source)  # Reduce background noise
    audio = recognizer.listen(source)
    
    try:
        command = recognizer.recognize_google(audio)  # Convert speech to text
        print(f"üó£ You said: {command}")  # Debugging step
    except sr.UnknownValueError:
        print("‚ùå Could not understand audio.")
    except sr.RequestError:
        print("‚ö†Ô∏è Could not request results from Google Speech Recognition service.")
